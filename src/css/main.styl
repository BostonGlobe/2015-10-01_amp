.ai2html
	text-shadow rgba(255, 255, 255, 0.37) 0px 0px 1px

h1
	font-family $benton

.intro
	font-family Helvetica, Arial, sans-serif
	line-height 1.5em
	margin-bottom 1em

.center-column
	margin-left auto
	margin-right auto
	@media (min-width: 0px)
		width 300px
	@media (min-width: 460px)
		width 460px

@media (min-width: 0px)
	#g-amp-online-Artboard_1
		display none
	#g-amp-online-Artboard_6
		display block
	#g-amp-online-Artboard_7
		display none

@media (min-width: 460px)
	#g-amp-online-Artboard_1
		display none
	#g-amp-online-Artboard_6
		display none
	#g-amp-online-Artboard_7
		display block

@media (min-width: 330px) and (max-width: 459px)
	.g-artboard
		box-shadow 0px 0.5px 3px 0px rgba(153, 153, 153, 0.5), 0px 0px 10px 0px rgba(0, 0, 0, 0.1)

@media (min-width: 470px) and (max-width: 599px)
	.g-artboard
		box-shadow 0px 0.5px 3px 0px rgba(153, 153, 153, 0.5), 0px 0px 10px 0px rgba(0, 0, 0, 0.1)
